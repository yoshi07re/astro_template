{
  "root": true,
  "globals": {
    "browser": true,
    "node": true
  },
  // "parserOptions": {
  //   "ecmaVersion": "latest",
  //   "sourceType": "module"
  // },
  "extends": ["eslint:recommended", "plugin:astro/recommended", "plugin:@typescript-eslint/recommended", "prettier", "plugin:tailwindcss/recommended"],
  "plugins": ["import", "unused-imports", "tailwindcss"],
  "rules": {
    "no-console": "error",
    "no-irregular-whitespace": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "object", "type", "index"],
        "newlines-between": "always",
        "pathGroupsExcludedImportTypes": ["builtin"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "pathGroups": [
          {
            "pattern": "@/components/**",
            "group": "internal",
            "position": "before"
          }
        ]
      }
    ]
  },
  "settings": {
    "tailwindcss": {
      "config": "./tailwind.config.ts",
      "groupByResponsive": true,
      "whitelist": ["helper-grid-area", "is-invisible", "helper-grid-lines", ["^js-.*"]]
    }
  },
  "overrides": [
    {
      "files": ["**/*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      }
    },
    {
      "files": ["**/*.{js,jsx,astro}"],
      "rules": {
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
      }
    },
    {
      "files": ["**/*.{ts,tsx}", "**/*.astro/*.js"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            "argsIgnorePattern": "^_",
            "destructuredArrayIgnorePattern": "^_"
          }
        ],
        "@typescript-eslint/no-non-null-assertion": "off"
      }
    }
  ],
  "ignorePatterns": ["/node_modules/", "/dist/"]
}
